generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = ""
}

model Transaction {
  id        Int      @id @default(autoincrement())
  type      String
  amount    Float
  category  String
  comment   String?
  createdAt DateTime @default(now())
  userId    Int
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  email    String  @unique
  password String
}
